<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.buildingBoundary.BuildingBoundary">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <Button fx:id="createBuildingBtn" layoutX="509.0" layoutY="71.0" mnemonicParsing="false" onAction="#onCreateBuilding" text="Crea edificio" />
                <Label layoutX="13.0" layoutY="58.0" prefHeight="51.0" prefWidth="152.0" text="Crea nuovo Edificio :" />
                <TextField fx:id="name" layoutX="341.0" layoutY="72.0" prefHeight="26.0" prefWidth="146.0" promptText="Inserisci Nome" />
            <ComboBox fx:id="listAreas"  layoutX="166.0" layoutY="72.0" prefWidth="150.0" promptText="Macroarea" />
            <Label layoutX="13.0" layoutY="161.0" text="Seleziona Edificio creato :" />
            <ComboBox fx:id="listAreas2" layoutX="132.0" layoutY="207.0" prefWidth="150.0" promptText="Macroarea" />
            <ComboBox fx:id="listBuildings" layoutX="331.0" layoutY="208.0" prefWidth="150.0" promptText="Edificio" />
            <TextField fx:id="modifyArea" layoutX="138.0" layoutY="265.0" prefHeight="26.0" prefWidth="146.0" />
            <TextField fx:id="modifyName" layoutX="332.0" layoutY="267.0" prefHeight="26.0" prefWidth="152.0" />
            <Button layoutX="219.0" layoutY="306.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="202.0" text="Modifica Edificio selezionato" onAction="#onModifyBuilding"/>
            <Button layoutX="219.0" layoutY="356.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="202.0" text="Elimina Edificio selezionato" onAction="#onDeleteBuilding"/>
            </children>
        </AnchorPane>
    </children>
</VBox>
